import java.lang.*;

class DataSizeRange
{
    public static void main(String arg[])
      {
        System.out.println( " \n " );
        System.out.println( " Minimum Range Of Integer : " + Integer.MIN_VALUE);
        System.out.println( " Maximum Range Of Integer : " + Integer.MAX_VALUE);
        System.out.println( "Int Byte : " + Integer.BYTES);
        System.out.println( " \n " );

        System.out.println( " Minimum Range Of Float : " + Float.MIN_VALUE);
        System.out.println( " Maximum Range Of Float : " + Float.MAX_VALUE);
        System.out.println( " Float Byte : " + Float.BYTES);
        System.out.println( " \n " );
       
        System.out.println( " Minimum Range Of Byte : " + Byte.MIN_VALUE);
        System.out.println( " Maximum Range Of Byte : " + Byte.MAX_VALUE);
        System.out.println( " Byte Bytes : " + Byte.BYTES);
        System.out.println( " \n " );

        System.out.println( " Minimum Range Of Short : " + Short.MIN_VALUE);
        System.out.println( " Maximum Range Of Short : " + Short.MAX_VALUE);
        System.out.println( " Short Byte : " + Short.BYTES);
        System.out.println( " \n " );
 
        
      }
}
