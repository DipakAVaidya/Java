import java.lang.*;
import java.util.*;

public class ReadKeyboard
{ 
      public static void main(String arg[])
        {
            Scanner sc=new Scanner(System.in); 
            int a,b,c;
            String Name;
            float x,y,z;
            System.out.println("May I Know your Name " );
            Name = sc.next();
            System.out.println("Welcome miss/mr " + Name);

            System.out.println("Do You Want to perform any mathematical opration");
            

            System.out.println("Enter A 2 number:  ");
            a = sc.nextInt();
            b = sc.nextInt();
            c = a+b;
            System.out.println("Sum Is " + c);

            System.out.println("Enter A 2 number:  ");
            x = sc.nextFloat();
            y = sc.nextFloat();
            z = x/y;
            System.out.println("Divison Is " + z);

            System.out.println("Enter A Binary number: "); 
            sc.useRadix(2);
            int u=sc.nextInt();
            System.out.println("Binary to Decimal Is: " + u);
            
            
          }
}


// Arithmatic Operations
public class Arithmatic {
    public static void main(String[] args) {
        int a = 12, b = 5;
        int c = a + b;
        int r = a % b;
        float F = (float) a / b;
        System.out.println(c);
        System.out.println(r);
        System.out.println(F);

        float  g= 25.3f, d = 6.6f;
        long l =  123l;
        float e = g % d;
        float z = (float)l / d;
        System.out.println(e);
        System.out.println(z);

        byte h = 10;
        short j = 13;
        char C = 40;

        // during the operation byte and short are converted into int its called coresion

        int k = j * h;
        int x = C + j;
        System.out.println(k);
        System.out.println(x);

        System.out.println();
        System.out.println(10/(2*5));



    }
}
